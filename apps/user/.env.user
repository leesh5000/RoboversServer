# User Service Configuration
NODE_ENV=development
PORT=5000

# Database - User Service
DATABASE_URL="postgresql://postgres:password@localhost:25432/robovers_user"

# Redis (User Service)
REDIS_HOST=localhost
REDIS_PORT=26379
REDIS_PASSWORD=userServiceRedisPassword

# JWT
JWT_SECRET=user-service-secret-key-change-this-in-production
JWT_EXPIRATION=7d

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
SMTP_FROM="Robovers User Service <noreply@robovers.com>"

# Snowflake
SNOWFLAKE_NODE_ID=1

# CORS
CORS_ORIGIN=*